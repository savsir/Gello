<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@*common:color/accent</item>
        <item name="android:colorPrimaryDark">@*common:color/accent_color_dark</item>
        <item name="android:colorAccent">@*common:color/accent</item>
        <item name="android:statusBarColor">@*common:color/accent_color_dark</item>
        <item name="android:navigationBarColor">?*android:colorPrimaryDark</item>
        <item name="android:textColorPrimary">@*common:color/light_text_color</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="ChooserToolbarStyle" parent="@android:style/Widget.Material.Toolbar">
        <item name="android:background">@*common:color/accent</item>
        <item name="android:titleTextAppearance">@style/ChooserActionBarTitleText</item>
    </style>
    <style name="ChooserActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@*common:color/ab_text_color</item>
    </style>
</resources>
