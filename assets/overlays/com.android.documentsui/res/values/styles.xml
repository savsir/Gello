<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogWhenReallyLarge" parent="@android:style/Theme.Material.Light" >
		<item name="android:colorPrimary">@*common:color/ab_color</item>
		<item name="android:colorPrimaryDark">@*common:color/accent_dark</item>
	</style>

    <style name="DocumentsTheme" parent="@style/DialogWhenReallyLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateUnspecified</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowMinWidthMajor">@null</item>
        <item name="android:windowMinWidthMinor">@null</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:actionBarTheme">@android:style/ThemeOverlay.Material.Dark.ActionBar</item>
		<item name="android:actionBarPopupTheme">@android:style/ThemeOverlay.Material.Light</item>
    </style>
</resources>
